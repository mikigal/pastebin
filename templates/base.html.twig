<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block title %}pastebin{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/main.css') }}"/>
</head>
<body>
<nav>
    <div id="global">
        <div id="logo"></div>
        <a href="/" id="create">New paste</a>
        <a href="https://github.com/mikigal/pastebin" id="repository" target="_blank" class="optional">Repository</a>
        <a href="#" class="optional">API</a>
        <a href="#" class="optional">API</a>
        <a href="#" class="optional">API</a>
    </div>

    <div id="account">
        <a href="#"><i class="fas fa-paste"></i></a>
        <a href="{{ path('app_panel') }}"><i class="fas fa-cog"></i></a>

        {% if app.user %}
            <p id="username">{{ app.user.username }}</p>
            <img src="{{ asset('images/guest.png') }}" alt=""/>
            <a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i></a> <!-- TODO: User avatars -->
        {% else %}
            <p id="username">Guest user</p>
            <a href="{{ path('app_panel') }}"><img src="{{ asset('images/guest.png') }}" alt=""/></a>
        {% endif %}
    </div>
</nav>

<div id="sidebar">
    {% block sidebar %}

    {% endblock %}
</div>

<div id="content">
    {% block content %}

    {% endblock %}
</div>
</body>
</html>
